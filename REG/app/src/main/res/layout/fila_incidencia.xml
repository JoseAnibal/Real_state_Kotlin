<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clikcyInci"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:background="@drawable/elevation"
    android:layout_marginTop="5dp"
    android:layout_marginRight="3dp"
    android:layout_marginLeft="3dp">

    <ImageView
        android:id="@+id/inci_Imagen"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/incidencia" />

    <TextView
        android:id="@+id/inci_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textAppearance="@style/textoTitulo"
        app:layout_constraintBottom_toBottomOf="@+id/inci_Imagen"
        app:layout_constraintStart_toEndOf="@+id/inci_Imagen"
        app:layout_constraintTop_toTopOf="@+id/inci_Imagen" />

    <TextView
        android:id="@+id/inci_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/inci_Imagen"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/incEstado"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@+id/inci_fecha"
        app:layout_constraintTop_toTopOf="@+id/inci_Imagen"
        app:srcCompat="@drawable/creada" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Estado:"
        app:layout_constraintBottom_toBottomOf="@+id/incEstado"
        app:layout_constraintEnd_toStartOf="@+id/incEstado"
        app:layout_constraintTop_toTopOf="@+id/incEstado" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Fecha:"
        app:layout_constraintBottom_toBottomOf="@+id/inci_fecha"
        app:layout_constraintEnd_toStartOf="@+id/inci_fecha"
        app:layout_constraintTop_toTopOf="@+id/inci_fecha" />

</androidx.constraintlayout.widget.ConstraintLayout>